#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="hkvb/bash/api"
export VCW_STACK_GLOBAL_STACKNAMES="bash"
export VCW_STACK_GLOBAL_BOOTSTACKS="bash"
export VCW_STACK_GLOBAL_RUNSTACKS=""
export VCW_STACK_GLOBAL_VOLUME_LIST="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_api_volume,${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_data_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_data_volume:/vcw/pwd"
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_BASH_PORTS,\
$VCW_STACK_BASH_NETWORKS,\
$VCW_STACK_BASH_VOLUMES,\
$VCW_STACK_GLOBAL_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS,\
$VCW_STACK_BASH_COMPOSE_EXTENSIONS'
export VCW_STACK_GLOBAL_SERVICE_NAME="bash_api"
export VCW_STACK_GLOBAL_IMAGE_NAME="hkvb/bash.base"
export VCW_STACK_BASH_PORTS=
export VCW_STACK_BASH_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay"
export VCW_STACK_BASH_VOLUMES="'${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_api_volume:/vcw/bin/${VCW_STACK_TYPE}','${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_data_volume:/vcw/pwd'${DOLLAR}{VCW_STACK_BASH_VOLUMES_MAPPINGS}"
export VCW_STACK_GLOBAL_VOLUMES="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_api_volume: { external: true },${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_data_volume: { external: true }"
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay: { external: true }"
export VCW_STACK_BASH_COMPOSE_EXTENSIONS="      restart_policy: { condition: none }
${DOLLAR}{VCW_STACK_BASH_COMPOSE_EXTENSIONS}"
# END GLOBAL SETTINGS

# START SETTINGS
export VCW_STACK_BASH_COMMAND="${CONFIGURATION_MODULE_BASH_COMMAND}"
export VCW_STACK_BASH_COMMAND_INTERACTIVE="${CONFIGURATION_MODULE_BASH_COMMAND_INTERACTIVE}"
export VCW_STACK_BASH_ENVIRONMENT="${CONFIGURATION_MODULE_BASH_ENVIRONMENT}"
export VCW_STACK_BASH_VOLUMES_MAPPINGS="${CONFIGURATION_MODULE_BASH_VOLUMES_MAPPINGS}"
export VCW_STACK_BASH_DEPLOY_MODE="${CONFIGURATION_MODULE_BASH_DEPLOY_MODE}"
export VCW_STACK_BASH_DEPLOY_RESOURCES_LIMITS_MEMORY="${CONFIGURATION_MODULE_BASH_MEMORY_LIMIT}"
export VCW_STACK_BASH_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="${CONFIGURATION_MODULE_BASH_MEMORY_RESERVED}"
# END SETTINGS

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
